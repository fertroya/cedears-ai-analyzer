# Ollama es el proveedor por defecto - NO necesitas API keys para Ollama
# Solo configura estas variables si cambias el proveedor de IA en config.yaml

# Google Gemini (si api_provider == "gemini")
# GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (si api_provider == "openai")
# OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face (si api_provider == "huggingface")
# HUGGINGFACE_API_KEY=your_huggingface_token_here

# Email Configuration (SMTP) - REQUERIDO para env√≠o de reportes
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password_here
RECIPIENT_EMAIL=your_email@gmail.com

# Database
DATABASE_URL=sqlite:///data/cedears.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/cedears

# Logging
LOG_LEVEL=INFO
